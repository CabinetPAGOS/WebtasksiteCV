									<a class="nav-link" href="{{ path('app_clientsdepagos') }}">
										<b>Clients de Pagos</b>
									</a>
								</li>
							{% endif %}
						</ul>

						<ul class="navbar-nav ms-auto">
							<li class="nav-item">
								<a class="nav-link" href="#" style="color: #ffffff; text-align: center;">
									<b>{{ app.user.nom }}
										{{ app.user.prenom }}</b>
								</a>
							</li>

							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle" href="#" id="navbarUserDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">

									<img
									src="data:image/png;base64,{{ logo }}" alt="Logo du client" class="client-logo" style="width: 30px; height: 30px; border-radius: 50%;"/>

								<!-- Ajout du logo client -->
								</a>
								<ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarUserDropdown">
									<li><hr class="dropdown-divider"></li>
									<li>
										<a class="dropdown-item" href="{{ path('app_logout') }}">
											<b>
												<i class="fas fa-sign-out-alt"></i>
												Se déconnecter
											</b>
										</a>
									</li>
								</ul>
							</li>

						</ul>
					</div>
				</div>
			</nav>


			<!-- Hero Section -->
			<div class="hero-section text-center">
				<h2>Forum du Client :
					{{ client.raisonSociale }}</h2>
			</div>

			<!-- Main Content -->
			<div class="container mt-5">
				<div id="forum-contents">
					{% if forums is empty %}
						<p class="no-content">Aucun Chat disponible pour ce client.</p>
					{% else %}
						{% for forum in forums %}
							<div class="forum-entry">
								<p>
									<strong>Date :</strong>
									{{ forum.date|date('d/m/Y H:i') }}</p>

								<pre style="white-space: pre-wrap; font-family: 'Poppins', sans-serif;">{{ forum.content }}</pre>
								<hr>
							</div>
						{% endfor %}
					{% endif %}
				</div>
			</div>

			<!-- Footer -->
			<footer>
				<p>&copy; 2024 Pagos - Tous droits réservés.</p>
			</footer>

			<!-- Bootstrap JS -->
			<link
			href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">

			<!-- JS Bootstrap -->
			<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
			<script>

				// Exemple d'initialisation manuelle pour le dropdown
document.querySelectorAll('.dropdown-toggle').forEach(function (dropdownToggle) {
dropdownToggle.addEventListener('click', function () {
const dropdownMenu = dropdownToggle.nextElementSibling;
dropdownMenu.classList.toggle('show');
});
});
			</script>
		</body>
	</head>
</html>
