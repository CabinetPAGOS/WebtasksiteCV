			/* Notifications */
			.notification-container {
				position: relative;
				margin-right: 15px;
				display: flex;
				align-items: center;
			}

			#notificationIcon {
				font-size: 24px;
				color: white;
				position: relative;
				cursor: pointer;
			}

			.notification-count {
